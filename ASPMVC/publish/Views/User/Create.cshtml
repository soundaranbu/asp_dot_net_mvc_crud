@model ASPMVC.Models.User
@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <h2>Update User Details</h2>
</div>
<hr />
<div class="form-group col-md-6">
    <form method="post" action="~/User/Create">
        <div class="form-group">
            <label class="col-form-label">User Name</label>
            <input type="text" class="form-control" name="UserName" value="" />
        </div>
        <div class="form-group">
            <label class="col-form-label">Full Name</label>
            <input type="text" class="form-control" name="FullName" value="" />
        </div>
        <div class="form-group">
            <label class="col-form-label">Mobile</label>
            <input type="number" class="form-control" name="Mobile" value="" />
        </div>
        <div class="form-group">
            <label class="col-form-label">Email</label>
            <input type="email" class="form-control" name="Email" value="" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-sm" type="submit" placeholder="Create" name="Create" value="Create" />
            <a class="btn btn-primary btn-sm" href="~/User/List">
                Back
            </a>
        </div>

    </form>

</div>
